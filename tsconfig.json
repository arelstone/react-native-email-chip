{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "Node",
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "jsx": "react-native",
        "lib": [
            "es6",
            "ESNext"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.spec.*",
        "**/*.test.*"
    ]
}
